{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@minicode",
  "type": "module",
  "packageManager": "bun@1.3.1",
  "scripts": {
    "lint": "oxlint --type-aware --fix --fix-suggestions && eslint **/*.{json}",
    "lint:all": "oxlint --type-aware --fix --fix-suggestions && eslint **/*.{json}",
    "lint:check": "oxlint --type-aware && eslint **/*.{json}",
    "fmt": "prettier --write",
    "fmt:all": "prettier --write **/*.{ts,json}",
    "typecheck": "bun turbo typecheck"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "catalog": {
      "ai": "6.0.0-beta.72",
      "@ai-sdk/anthropic": "3.0.0-beta.37",
      "zod": "^4",
      "@types/bun": "1.3",
      "@typescript/native-preview": "^7.0.0-dev.20251106.1",
      "@tsconfig/bun": "1.0.9",
      "typescript": "5.9.2",
      "remeda": "^2.30.0"
    }
  },
  "devDependencies": {
    "@eslint/json": "^0.13.1",
    "@prettier/plugin-oxc": "^0.0.4",
    "@tsconfig/bun": "catalog:",
    "@types/bun": "catalog:",
    "eslint": "^9.34.0",
    "oxlint": "^1.23.0",
    "oxlint-tsgolint": "^0.2.0",
    "prettier": "^3.6.2",
    "turbo": "^2.6.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jmmarotta/minicode"
  },
  "prettier": {
    "semi": false,
    "printWidth": 120,
    "overrides": [
      {
        "files": [
          "**/*.{js,mjs,cjs,jsx}"
        ],
        "options": {
          "plugins": [
            "@prettier/plugin-oxc"
          ],
          "parser": "oxc"
        }
      },
      {
        "files": [
          "**/*.{ts,mts,cts,tsx}"
        ],
        "options": {
          "plugins": [
            "@prettier/plugin-oxc"
          ],
          "parser": "oxc-ts"
        }
      }
    ]
  },
  "license": "MIT",
  "trustedDependencies": [],
  "overrides": {},
  "patchedDependencies": {},
  "dependencies": {
    "jiti": "^2.6.1"
  }
}
