{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@minicode",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jmmarotta/minicode"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "catalog": {
      "ai": "6.0.0-beta.99",
      "@ai-sdk/anthropic": "3.0.0-beta.37",
      "zod": "^4.1.1",
      "@types/bun": "1.3",
      "@typescript/native-preview": "^7.0.0-dev.20251106.1",
      "@tsconfig/bun": "1.0.9",
      "typescript": "5.9.2",
      "remeda": "^2.30.0"
    }
  },
  "type": "module",
  "scripts": {
    "postinstall": "lefthook install",
    "lint": "oxlint --type-aware --fix --fix-suggestions",
    "lint:all": "bun run lint",
    "lint:check": "oxlint --type-aware",
    "fmt": "oxfmt --write .",
    "fmt:all": "bun run fmt",
    "fmt:check": "oxfmt --check .",
    "typecheck": "bun turbo typecheck --concurrency=2"
  },
  "dependencies": {
    "jiti": "^2.6.1"
  },
  "devDependencies": {
    "@tsconfig/bun": "catalog:",
    "@types/bun": "catalog:",
    "lefthook": "^1.13.6",
    "oxfmt": "^0.31.0",
    "oxlint": "^1.23.0",
    "oxlint-tsgolint": "^0.2.0",
    "turbo": "^2.6.0"
  },
  "overrides": {},
  "packageManager": "bun@1.3.1",
  "patchedDependencies": {},
  "trustedDependencies": []
}
