{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "fmt": {
      "cache": false
    },
    "fmt:check": {
      "cache": false
    },
    "lint": {
      "cache": false
    },
    "lint:check": {
      "cache": false
    },
    "typecheck": {
      "dependsOn": ["^typecheck"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "test": {
      "dependsOn": ["^test"],
      "outputs": []
    }
  }
}
